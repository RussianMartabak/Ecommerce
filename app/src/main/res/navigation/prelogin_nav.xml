<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prelogin_nav"
    app:startDestination="@id/onboarding">

    <action
        android:id="@+id/skip_to_login"
        app:destination="@+id/loginFragment"
        />
    <fragment
        android:id="@+id/onboarding"
        android:name="com.martabak.ecommerce.prelogin.Onboarding"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboarding_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_onboarding_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.martabak.ecommerce.prelogin.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.martabak.ecommerce.prelogin.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_registerFragment_to_profileFragment"
            app:popUpTo="@+id/prelogin_nav"
            app:popUpToInclusive="true"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.martabak.ecommerce.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>